@model BrainSystem.OS.MVC.ViewModels.OrdemServicoViewModel

<link href="~/assets/plugins/switchery/dist/switchery.min.css" rel="stylesheet" type="text/css" media="screen" />

<section id="main-content" class=" ">
    <section class="wrapper" style='margin-top:60px;display:inline-block;width:100%;padding:15px 0 0 15px;'>
        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">
                Sumula Fechamento/Abertura OS
            </div>
        </div>
        <div class="clearfix"></div>


        <div class="col-lg-12">
            <section class="box">
                <header class="panel_header">
                    <h1 class="title pull-left">Simulação</h1>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-2">
                            <label for="lblOS" class="form-label">OS Aberta</label>
                        </div>
                        <div class="col-xs-2">
                            @if (@Model.EstadoControles != "disabled")
                            {

                                <div class="form-block bottom15"><input type="checkbox" class="js-switch" checked id="EstadoControles" name="EstadoControles" onchange="GravarOpcaoSimulacao();" /></div>

                            }
                            else
                            {
                                <div class="form-block bottom15"><input type="checkbox" class="js-switch" unchecked id="EstadoControles" name="EstadoControles" onchange="GravarOpcaoSimulacao();" /></div>

                            }
                            
                        </div>
                        <div class="col-xs-10"></div>
                    </div>
                </div>
            </section>
        </div>


    </section>
</section>

<script src="~/assets/js/jquery-1.11.2.min.js" type="text/javascript"></script>

<script src="~/assets/plugins/switchery/dist/switchery.min.js" type="text/javascript"></script> 

<script type="text/javascript" >

    function GravarOpcaoSimulacao()
    {
        
        var url = '/OrdemServico/GravarOpcaoSimulacao/';
        
        var opcao = $('#EstadoControles').is(':checked')

        var estado = "disabled";

        if (opcao) estado = "enabled";

        var urlcomposta = url + estado;

        $(location).attr('href', urlcomposta);


    }



</script>