@model BrainSystem.OS.MVC.ViewModels.FuncionarioViewModel


<div class="modal-dialog animated rotateInDownRight">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button" onclick="AbrirURL('/OrdemServico/ClienteResponsavel')">×</button>
            <h4 class="modal-title">Funcionário</h4>
        </div>
        <div class="modal-body">
             
            @using (Html.BeginForm("GravarFuncionario", "Funcionario", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmCadastroFuncionario", @class = "form-horizontal", @onsubmit = "return  MostrarSpinner('frmCadastroFuncionario')"}))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="input-group primary">
                        @*<label for="txtNome" class="form-label">@Html.DisplayNameFor(model => model.Nome)</label>*@
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome", @id = "txtNome" })
                    </div>
                </div>
      
                <div class="form-group">
                    <div class="input-group primary">
                        @*<label for="txtTelefone" class="form-label">@Html.DisplayNameFor(model => model.Telefone)</label>*@
                        @*@Html.TextBoxFor(model => model.Telefone, new { @class = "form-control", @placeholder = "Telefone", @id = "txtTelefone" })*@
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-phone"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Telefone" name="Telefone" id="Telefone" data-mask="(99)99999-9999" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group primary">
                        @*<label for="txtEmail" class="form-label">@Html.DisplayNameFor(model => model.Email)</label>*@
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input type="email" class="form-control" placeholder="E-mail" id="Email" name="Email" min="1" max="100" step="1" data-error="Por favor,informe um e-mail válido." required>
                    </div>
                 </div>
                <div class="form-group">
                    <div class="input-group primary">
                        @*<label for="txtCargo" class="form-label">@Html.DisplayNameFor(model => model.Cargo)</label>*@
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-users"></i>
                        </span>
                        @Html.TextBoxFor(model => model.Cargo, new { @class = "form-control", @placeholder = "Cargo", @id = "txtCargo" })
                    </div>
                 </div>
                <div class="form-group">
                    <div class="input-group primary">
                        @*<label for="txtRG" class="form-label">@Html.DisplayNameFor(model => model.RG)</label>*@
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-newspaper-o"></i>
                        </span>
                        @Html.TextBoxFor(model => model.RG, new { @class = "form-control", @placeholder = "RG", @id = "txtRG" })
                    </div>
                 </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary pull-right" id="btnGravarClienteResponsavel">OK</button>
                    </div>

                    }
                </div>
    </div>
</div>

