@model BrainSystem.OS.MVC.ViewModels.OrdemServicoViewModel
<section id="main-content" class=" ">
    <section class="wrapper" style='margin-top:60px;display:inline-block;width:100%;padding:15px 0 0 15px;'>
        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">
                Atendimento
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box">
                <header class="panel_header">
                    <h1 class="title pull-left">Dados OS</h1>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-2">Ordem servico Nr</div>
                        <div class="col-xs-2">@ViewBag.OrdemServico</div>
                        <div class="col-xs-2">Registrado em</div>
                        <div class="col-xs-2">@ViewBag.DataChamado</div>
                        <div class="col-xs-2">Protocolo chamado</div>
                        <div class="col-xs-2">@ViewBag.NroChamado</div>
                    </div>
                    <div class="row">
                        <button type="button" id="btnRetornar" class="btn btn-success btn-icon bottom15 right15 pull-right" onclick="AbrirURL('/FluxoAtendimento/Index')">
                            <i class="fa fa-arrow-circle-left"></i> &nbsp; <span>Retornar</span>
                        </button>
                    </div>
                </div>
            </section>
        </div>

        @*@using (Html.BeginForm("Gravar", "MarketingAvaliacao", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmAvaliacaoAuditoria", @onsubmit = "return  MostrarSpinner('frmAvaliacaoAuditoria')" }))*@

        @using (Html.BeginForm("EnviarDadosFinalizacao", "OrdemServico", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmDadosComplementares", @class = "form-horizontal", @onsubmit = "return  MostrarSpinner('frmDadosComplementares')" }))
        {   @Html.AntiForgeryToken()
            <div class="col-lg-12">
                <section class="box">
                    <header class="panel_header">
                        <h1 class="title pull-left">Dados Complementares</h1>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                      

                                <div class="form-group">
                                    <label for="txtObservacoes" class="form-label">Observações</label>
                                    @if(@ViewBag.EstadoControles != "disabled")
                                    {
                                        @Html.TextAreaFor(model => model.Observacoes, new { placeholder = "Observações", @class = "form-control", @id = "txtObservacoes" })

                                    }
                                    else
                                    {
                                        @Html.TextAreaFor(model => model.Observacoes, new { placeholder = "Observações", @class = "form-control", @id = "txtObservacoes", @disabled="disabled" })

                                    }
                                   
                                    @*@Html.DropDownListFor(model => model.IdProduto, Model.Produtos, new { @class = "form-control m-bot15", @id = "cboProduto" })*@
                                </div>
                                <div class="form-group">
                                    <label for="inputAnexos" class="form-label">Anexos</label>
                                    <input type="file" class="file form-control" id="inputAnexos" name="inputAnexos" multiple @ViewBag.EstadoControles>
                                </div>
                        
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12">
                <section class="pull-right">

                    <button type="submit" class="btn btn-success btn-icon bottom15 right15">
                        <i class="fa fa-arrow-circle-right"></i> &nbsp; <span>Avançar</span>
                    </button>

                </section>
            </div>
        }

    </section>
</section>

<script src="~/assets/js/jquery-1.8.3.min.js"></script>
<script src="~/assets/plugins/fileinput/plugins/sortable.min.js"></script>
<script src="~/assets/plugins/fileinput/fileinput.ordemservico.min.js"></script>
<script src="~/assets/plugins/fileinput/locais/pt-BR.js"></script>
<script src="~/assets/plugins/fileinput/themes/explorer/theme.min.js"></script>
<script src="~/assets/js/OrdemServico/DadosComplementares.js"></script>