@model BrainSystem.OS.MVC.ViewModels.ProdutosFalhadosViewModel

@*<div aria-hidden="true" role="dialog" tabindex="-1" id="modCadastroProdutosFalhados" class="modal fade" style="display: none;">*@
<div class="modal-dialog animated rotateInDownRight">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button" onclick="AbrirURL('/FluxoAtendimento/Index')">×</button>
            <h4 class="modal-title">Produto Falhado</h4>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("GravarProdutoFalhado", "FluxoAtendimento", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmCadastroProdutoFalhado", @class = "form-horizontal"}))
            {
                @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="cboProduto" class="form-label">Produto</label>
                        @Html.DropDownList("IdProduto", null, string.Empty, new { @class = "form-control m-bot15", @onchange = "FiltrarLocalizacaoFalha($('#IdProduto'))" })
                    </div>
                    <div class="form-group">
                        <div class="input-group primary">
                            <span class="input-group-addon">
                                <span class="arrow"></span>
                                <i class="fa fa-list-ol"></i>
                            </span>
                            @Html.TextBoxFor(model => model.NumeroSerie, new { @class = "form-control", @placeholder = "Número Série", @id = "txtNroSerie" })
                        </div>
                    </div>
                    <div class="form-group" id="divComboLocalizacaoFalha" style="display:none">
                        <img src="~/assets/images/loading3.gif" alt="Carregando" />&nbsp;Carregando localização falha...
                    </div>
                    <div class="form-group" id="divComboDetalhamentoFalha" style="display:none">
                        <img src="~/assets/images/loading3.gif" alt="Carregando" />&nbsp;Carregando detalhamento falha...
                    </div>
                    <div class="form-group" id="divComboAcaoCorretiva" style="display:none">
                        <img src="~/assets/images/loading3.gif" alt="Carregando" />&nbsp;Carregando ação corretiva...
                    </div>
                    <div class="form-group" id="divComboSolucaoAdotada" style="display:none">
                        <img src="~/assets/images/loading3.gif" alt="Carregando" />&nbsp;Carregando solução adotada...
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.StatusFuncionamento, new { @class = "iCheck" }) Status Funcionamento
                        </label>

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary pull-right" id="btnGravarProdutoFalhado">OK</button>
                    </div>
                    
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/assets/js")

@*</div>*@
